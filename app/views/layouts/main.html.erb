        <li><p><%= link_to truncate(a.name, 100), a, :class=>"foot" %>&nbsp;<%= link_to ">>", a %></p></li>
        <% end %>
        <li><%= link_to "Більше порад", articles_path, :class=>"detail" %></li>
        </ul>
        </div>
        <div class="column">
