        <% end %>
        <div class="container">
          
            <div class="content clear">
                <%= yield:layout %>
            </div>
          
        <div class="clearfooter">&nbsp;</div>
        </div>
    
    <div class="glow iePNG">&nbsp;</div>
    <div class="footer">
      <div class="news">
        <div class="column">
